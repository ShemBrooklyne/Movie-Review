<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/midnight_blue"
    xmlns:trailer_card="http://schemas.android.com/apk/res-auto"
    android:adjustViewBounds="true">

    <androidx.cardview.widget.CardView
        android:id="@+id/trailer_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        trailer_card:cardBackgroundColor="@color/transparent">

        <RelativeLayout
            android:id="@+id/trailer_section"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/player"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="5dp"
                android:src="@drawable/youtube" />

            <TextView
                android:id="@+id/trailer_title"
                android:layout_width="161dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginEnd="3dp"
                android:layout_marginRight="3dp"
                android:layout_toEndOf="@+id/player"
                android:layout_toRightOf="@+id/player"
                android:padding="16dp"
                android:textColor="@color/white" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>