<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/dim_gray"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:adjustViewBounds="true"
    tools:context=".DiscoverActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:layout_gravity="center"
        android:elevation="3dp">

        <!--    Grid items for the recycler view-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/poster"
                android:adjustViewBounds="true"
                android:layout_margin="1dp"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:id="@+id/title"
                android:layout_below="@+id/poster"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/TITLE_PDL"
                android:paddingRight="@dimen/TITLE_PDR"
                android:paddingTop="@dimen/TITLE_PDT"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/title_place"
                android:textColor="@color/black"
                android:textSize="@dimen/TITLE_TSZ" />

            <TextView
                android:id="@+id/year"
                android:text="@string/DATE_FORMAT"
                android:layout_below="@+id/title"
                android:paddingLeft="@dimen/TITLE_PDL"
                android:paddingRight="@dimen/TITLE_PDR"
                android:paddingBottom="@dimen/TITLE_PDB"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>